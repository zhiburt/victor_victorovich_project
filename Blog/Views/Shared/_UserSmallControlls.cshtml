@using Microsoft.AspNetCore.Identity
@using Blog.Models.DbModels

@inject SignInManager<UserIndentity> SignInManager;
@inject UserManager<UserIndentity> UserManager;

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Authefication" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" class="btn btn-block navbar-btn navbar-link"><i class="fa fa-power-off"></i>@UserManager.GetUserName(User)</button>
    </form>    
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item"><a class="btn btn-success" asp-area="" asp-controller="Authefication" asp-action="Index"> ["Login"]</a></li>
    </ul>
}