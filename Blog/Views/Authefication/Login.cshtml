		@{
            ViewData["Title"] = "Register";
        }

        @using Blog.ViewModel.Authefication;
@model LoginViewModel

<form class="form-horizontal login-form"
            asp-action="Login"
            asp-controller="Authefication"
            asp-route-returnurl="@ViewData["ReturnUrl"]"
            method="POST">
						<div class="form-group relative">
							<input asp-for="Email" class="form-control input-lg" id="login_username" placeholder="E-mail Address" required="" type="email"/> <i class="fa fa-user"></i>
                            <span asp-validation-for="Email" class=" text-danger"></span>
                        </div>
						<div class="form-group relative">
							<input asp-for="Password" class="form-control input-lg" id="login_password" placeholder="Password" required="" type="password"/> <i class="fa fa-lock"></i>
                            <span asp-validation-for="Password" class=" text-danger"></span>			
            			</div>
						<div class="form-group">
							<button class="btn btn-success btn-lg btn-block" type="submit">Sign Up</button>
						</div>
						<div class="checkbox checkbox-success">
							<input asp-for="RememberMe" id="agree-terms" type="checkbox">
                            <label for="agree-terms">Remember Me?</label>
						</div>
						<hr>
						<div class="text-center">
							<label><a href="#">Are you forget your password?</a></label>
						</div>
					</form>